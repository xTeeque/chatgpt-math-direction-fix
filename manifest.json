{
  "manifest_version": 3,
  "name": "ChatGPT Math Direction Fix",
  "version": "1.4",
  "description": "Ensures math expressions display left-to-right (LTR) on ChatGPT when using Hebrew.",
  "author": "Asaf Arusi",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
